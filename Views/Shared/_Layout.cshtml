<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - PandaStack</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<body>
<div class="wrapper">
  <header>
    <nav>
      <div class="menu-icon">
        <i class="fa fa-bars fa-2x"></i>
      </div>
      <div class="logo">PandaStack</div>
      <div class="menu">
        <ul>
          <li><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
          <li><a asp-area="" asp-controller="Pregunta" asp-action="Pregunta">Pregunta</a></li>
          <li><a asp-area="" asp-controller="Pregunta" asp-action="Populares">Populares</a></li>
          <li><a asp-area="" asp-controller="Pregunta" asp-action="SinResp">Sin Respuesta</a></li>
          <li><a asp-area="" asp-controller="Ingresos" asp-action="Ingreso">Ingresa</a></li>
        </ul>
      </div>
    </nav>
  </header>
  <div class="content">
    @RenderBody()
  </div>
</div>


<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2020 - OfPandaStack - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<link 
  href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.css" 
  rel="stylesheet"  type='text/css'>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
  crossorigin="anonymous"
></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>